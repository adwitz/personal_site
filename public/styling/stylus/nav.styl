size = 100%

.nav
  display: inline-block
  position: absolute
  top: 0
  right: 0
  width: auto
  margin-top: 3%
  margin-right: 10%
  background-color: transparent
  text-align: center

  
.nav button
  background-color: transparent
  padding: 0 auto
  margin: 0 0
  border: none
  height: 100%
  font-family: 'ArvoRegular', sans-serif
  font-size: 1.3em
  font-weight: bold

.nav button:hover
  color: rgb(73,77,77)
  font-size: 1.32em

.box
  text-align: left
  height: auto
  width: auto

.descriptions
  position: absolute
  display: inline-block
  width: 95%
  font-size: 1.05em
  text-align: center

.descriptions p
  font-size: 1.05em
  text-align: left
  margin-left: 3%

.descriptions li
  font-size: 1.05em
  text-align: left
  margin-left: 3%

.projects
  font-weight: bold
  color: black

.logos
  position: relative
  display: inline-block
  background-size: contain
  background-repeat: no-repeat
  text-align: center
  margin: 2% 2%


